@page "{title?}"
@model IndexModel
@{
    ViewData["Title"] = "URL Shortener";
}

<h1>Shorten URL</h1>

<form method="post" class="w-50" >
    <div class="form-group">
        <label>URL</label>
        <input type="text" class="form-control" required asp-for="Shorten.OriginalUrl" placeholder="https//www.example.com">
    </div>
    <div class="form-group">
        <label>(Optional) Custom Path</label>
        <input type="text" class="form-control" asp-for="Shorten.Token" placeholder="min 1 max 10 Characters" maxlength="10">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>
